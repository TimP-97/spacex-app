<body>
    <div class="card">
        <% for (let i = 0; i < ships.length; i++) {%>
            <% let ship = ships[i]; %>
        <div class="card-content">
          <div class="media">
            <div class="media-left">
              <figure class="image is-48x48">
                <img src="<%= ship.image %>" alt="<%= ship.name %>">
              </figure>
            </div>
            <div class="media-content">
              <p class="title is-4"><%= ship.name %></p>
              <p class="subtitle is-6"><%= ship.home_port %></p>
            </div>
          </div>
      
          <div class="content">
           <p> Status: <%= ship.status %> | Roles: <%= ship.roles[0] %>
            <br>
           </p>
            <a href="<%= ship.link %>">More info</a> 
            <br>
          </div>
        </div>
      </div>
      <br>
      <% }; %>

</body>
</html>